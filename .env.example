# AI Provider: openrouter | openai | anthropic | google | xai
AI_PROVIDER=openrouter

# Provider API Keys (set the one matching your AI_PROVIDER)
OPENROUTER_API_KEY=sk-or-your-key-here
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=
XAI_API_KEY=

# Display
USER_DISPLAY_NAME=Logani

# Export
OUTPUT_DIR=~/obsidian-vault/echobridge
AUTO_EXPORT=true
INCLUDE_TRANSCRIPT_IN_MD=true

# STT
WHISPER_MODEL=small
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=int8

# AI
DEFAULT_MODEL=anthropic/claude-sonnet-4.6

# Server
HOST=0.0.0.0
PORT=8000
DATABASE_PATH=./data/echobridge.db
AUDIO_DIR=./data/audio

# Agent API
ECHOBRIDGE_AGENT_API_KEY=

# Cloud Storage (S3-compatible: AWS S3, Cloudflare R2, Backblaze B2, MinIO)
CLOUD_STORAGE_ENABLED=false
S3_ENDPOINT_URL=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=
S3_REGION=auto
S3_PREFIX=echobridge/
CLOUD_SYNC_AUDIO=true
CLOUD_SYNC_EXPORTS=true
